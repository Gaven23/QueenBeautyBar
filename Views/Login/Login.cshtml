@{Layout = null;}
@model QueenBeautyBar.LoginViewModel

@{
    ViewData["Title"] = "Login";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
   
    <link href="~/icon-01.ico" rel="shortcut icon" type="/icon-01.ico" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href='https://fonts.googleapis.com/css?family=Fugaz One' rel='stylesheet'>
    <link rel="stylesheet" href="~/js/tableexport.min.js" />
    <link rel="stylesheet" href="~/css/tableexport.css" />
    <link rel="stylesheet" href="~/css/tableexport.min.css" />
    <script src="https://kit.fontawesome.com/3051aeb07b.js" crossorigin="anonymous"></script>
</head>
<center>
    <h2 class="text-primary" style="padding-top:50px; color:#008B8B !important; ">
        <img src="~/Queenz/Queens Logo Svg File.svg" height="250" alt="mdb logo">
    </h2>
    <h4 style="color:black" class="mb-4">Sign In</h4>
</center>
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control" placeholder="Enter Username" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" name="Password" placeholder="Enter Password" required="" id="myInput" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
                <input id="check3" name="check3" type="checkbox" value="show password" onclick="myFunction()">
                <label class="check" for="check3">Show password</label>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" name="Password" placeholder="Enter Password" required="" id="myInput" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
                <input id="check3" name="check3" type="checkbox" value="show password" onclick="myFunction()">
                <label class="check" for="check3">Show password</label>
            </div>
            <script>
                function myFunction() {
                    var x = document.getElementById("myInput");
                    if (x.type === "password") {
                        x.type = "text";
                    } else {
                        x.type = "password";
                    }
                }
            </script>
            <div class="form-group">
                <button type="submit" class="btn btn-block" style="border-bottom-color: rgba(255,255,255,0.6); background-color: #7C0E5D;">Sign In <i class="fa fa-sign-in-alt ml-2"></i></button>
                <label class="field-validation-error" style="color: rgba(255,255,255,0.8);"></label>
                <p class="text-center text-muted small pb-3">Copyright &copy; Queens Beauty Bar 2020</p>
            </div>
            <h1 style="padding-bottom:180px"></h1>
        </form>
    </div>
</div>



